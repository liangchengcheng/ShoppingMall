<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dip"
    android:background="#D2D2D2"
    android:orientation="horizontal"
    android:padding="1dip">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/ll"
            android:background="@drawable/button_rect_list_normal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/fl_ad_select"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/list_item_selector">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="18dip"
                    android:paddingLeft="18dip"
                    android:paddingRight="18dip"
                    android:paddingTop="18dip">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_ad_linkman"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#333"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="0dip"
                            android:layout_height="0dip"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_ad_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#333"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="0dip"
                        android:layout_height="0dip"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="#888"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:focusable="false"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:id="@+id/iv_ad_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/modify_order_address_selected" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_ad_edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#EFEFEF">

                <ImageView
                    android:focusable="false"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/modify_order_address_cut_line" />

                <ImageView
                    android:focusable="false"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dip"
                    android:background="@drawable/modify_order_address_edit" />
            </FrameLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>